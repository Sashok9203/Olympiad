<Window x:Class="Olympiad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olympiad"
        xmlns:vms="clr-namespace:Olympiad.Models"
        mc:Ignorable="d"
        Title="OlympiadBD" Height="450" Width="800" MinWidth="500" MinHeight="450" Background="#FF7D84DE">
    <Window.DataContext>
        <vms:OlympiadDBModel/>
    </Window.DataContext>

    <Window.Resources>

    </Window.Resources>


    <TabControl >
        <TabItem Header="Medal table" FontSize="17" FontWeight="DemiBold"  >
            <Grid Background="#FF7D84DE">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel  Orientation ="Horizontal"  Margin="20,0,0,0" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Qlympiad" DockPanel.Dock="Left" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" Foreground="White" />
                    <ComboBox DisplayMemberPath="Name" SelectedIndex="0" Width="Auto" SelectedItem="{Binding SelectedOlympiad,Mode=TwoWay}" ItemsSource="{Binding ComboBoxOlympiad}" DockPanel.Dock="Left"   Height="25" FontSize="15" />
                </StackPanel>
                <TextBlock Margin="30,0,0,0" Grid.Column="1" Grid.ColumnSpan="4" Text="Medal table" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <Border  Grid.Row="1" Grid.ColumnSpan="5" CornerRadius="3" >
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF484C80"/>
                            <GradientStop Color="#FF484C80" Offset="1"/>
                            <GradientStop Color="#FF8A92F7" Offset="0.537"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock  Margin="20,0,0,0" Text="Country" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="18" FontWeight="DemiBold" Foreground="White" />
                <Image Source="/Images/gold.png"   Width="40"  Grid.Column="1" Grid.Row="1"/>
                <Image Source="/Images/silver.png" Width="40" Grid.Column="2" Grid.Row="1"/>
                <Image Source="/Images/bronze.png" Width="40" Grid.Column="3" Grid.Row="1"/>
                <Image Source="/Images/all.png"    Height="40" Grid.Column="4" Grid.Row="1"/>

                <ListView Margin="0,10,0,10" ItemsSource="{Binding MedalTable}" Grid.Row="2" Grid.ColumnSpan="5" HorizontalContentAlignment="Stretch"  BorderBrush="{x:Null}" Foreground="White">
                    <ListView.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF989CD2" Offset="0.514"/>
                            <GradientStop Color="#FF494B67" Offset="0.86"/>
                            <GradientStop Color="#FF494B67" Offset="0.135"/>
                        </LinearGradientBrush>
                    </ListView.Background>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text ="{Binding Country}" FontSize="19" Margin="15,5,5,5" />
                                <TextBlock Grid.Column="1" Text ="{Binding Gold}"    FontSize="18"  HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text ="{Binding Silver}"  FontSize="18"  HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text ="{Binding Bronze}"  FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text ="{Binding Total}"   FontSize="18"  HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </TabItem>
        <TabItem Header="Medals">
        </TabItem>
    </TabControl>


</Window>
